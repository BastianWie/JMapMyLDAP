<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="ldap_profile">
		<fieldset name="ldapprofile"
			label="Basic Information"
		>
			<field
				name="telephoneNumber"
				type="text"
				description="PLG_LDAP_PROFILE_FIELD_TELEPHONE_DESC"
				label="PLG_LDAP_PROFILE_FIELD_TELEPHONE_LABEL"
				size="30"
				filter="tel"
				required="false"
				sync="true"
				disabled="false"
			/>
			<field
				name="description"
				type="textarea"
				description="PLG_LDAP_PROFILE_FIELD_ABOUT_ME_DESC"
				label="PLG_LDAP_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
				required="false"
				sync="true"
				disabled="false"
			/>
		</fieldset>
		<fieldset name="website"
			label="Website Stuff"
		>
			<field
				name="wWWHomePage"
				type="text"
				description="Your Shitty Homepage"
				label="Homepage"
				size="30"
				filter="string"
				required="false"
				sync="true"
				disabled="false"
			/>
			<field
				name="url"
				type="text"
				description="Any of your other shitty homepages"
				label="Other Web Page"
				cols="30"
				filter="string"
				required="false"
				sync="true"
				disabled="false"
			/>
		</fieldset>
	</fields>
</form>
