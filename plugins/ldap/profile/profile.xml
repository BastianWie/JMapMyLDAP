	<version>2.0.0.2</version>
	<buildDate>Mon Oct 24 18:20:35 BST 2011</buildDate>
	<description>PLG_LDAP_PROFILE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="profile">profile.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_ldap_profile.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_ldap_profile.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="onlogin" type="radio" default="1" description="PLG_LDAP_PROFILE_FIELD_ONLOGIN_DESC" label="PLG_LDAP_PROFILE_FIELD_ONLOGIN_LABEL">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="spacer1" type="spacer" hr="true"/>
				<field name="sync_name" type="radio" default="0" description="PLG_LDAP_PROFILE_FIELD_SYNC_NAME_DESC" label="PLG_LDAP_PROFILE_FIELD_SYNC_NAME_LABEL">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="sync_email" type="radio" default="0" description="PLG_LDAP_PROFILE_FIELD_SYNC_EMAIL_DESC" label="PLG_LDAP_PROFILE_FIELD_SYNC_EMAIL_LABEL">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="spacer2" type="spacer" hr="true"/>
				<field name="profile_name" type="text" default="default" description="PLG_LDAP_PROFILE_FIELD_PROFILENAME_DESC" label="PLG_LDAP_PROFILE_FIELD_PROFILENAME_LABEL"/>
				<field name="permitted_forms" type="text" default="com_users.profile; com_users.registration; com_users.user; com_admin.profile" description="PLG_LDAP_PROFILE_FIELD_PERMITTEDFORMS_DESC" label="PLG_LDAP_PROFILE_FIELD_PERMITTEDFORMS_LABEL"/>
			</fieldset>
		</fields>
	</config>
</extension>
