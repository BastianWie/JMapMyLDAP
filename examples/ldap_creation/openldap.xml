<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<template domain="" usernameKey="username" passwordKey="password_clear" emailKey="email" nameKey="name">
		<dn type="eval"><![CDATA[return "uid=${username},ou=People,dc=shmanic,dc=net";]]></dn>
		<attribute name="objectClass" type="string">inetOrgPerson</attribute>
		<attribute name="objectClass" type="string">posixAccount</attribute>
		<attribute name="objectClass" type="string">shadowAccount</attribute>
		<attribute name="gidNumber" type="string">1000</attribute>
		<attribute name="givenName" type="eval"><![CDATA[return $this->helper->getFirstname($user['name']);]]></attribute>
		<attribute name="homeDirectory" type="eval"><![CDATA[return "/home/${user['username']}";]]></attribute>
		<attribute name="loginShell" type="string">/bin/bash</attribute>
		<attribute name="sn" type="eval"><![CDATA[return $this->helper->getLastname($user['name']);]]></attribute>
		<attribute name="uidNumber" type="eval"><![CDATA[return $this->helper->getUidNumber();]]></attribute>
	</template>
</templates>